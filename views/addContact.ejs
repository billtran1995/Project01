<%- include('partials/header') %> <%- include('partials/navbar') %>

<div class="container">
  <h4><%= pageTitle %></h4>
  <div class="row">
    <form class="col m12" action="/contacts/create" method="post" novalidate>
      <div class="row"><label style="font-size: 14pt;">Name:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'firstName') ? 'invalid' : '' %>"
            type="text"
            name="firstName"
            value="<%= oldInput.firstName %>"
          />
          <label for="firstName">First Name</label>
        </div>
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'lastName') ? 'invalid' : '' %>"
            name="lastName"
            type="text"
            value="<%= oldInput.lastName %>"
          />
          <label for="lastName">Last Name</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Email Address:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'email') ? 'invalid' : '' %>"
            name="email"
            type="email"
            value="<%= oldInput.email %>"
          />
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Phone Number:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'mobile') ? 'invalid' : '' %>"
            name="mobile"
            type="text"
            value="<%= oldInput.mobile %>"
          />
          <label for="mobile">Mobile</label>
        </div>
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'home') ? 'invalid' : '' %>"
            name="home"
            type="text"
            value="<%= oldInput.home %>"
          />
          <label for="home">Home</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'work') ? 'invalid' : '' %>"
            name="work"
            type="text"
            value="<%= oldInput.work %>"
          />
          <label for="work">Work</label>
        </div>
      </div>
      <div class="row"><label style="font-size: 14pt;">Address:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'street') ? 'invalid' : '' %>"
            name="street"
            type="text"
            value="<%= oldInput.street %>"
          />
          <label for="street">street</label>
        </div>
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'city') ? 'invalid' : '' %>"
            name="city"
            type="text"
            value="<%= oldInput.city %>"
          />
          <label for="city">City</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input
            class="<%= errorMessage.find(error => error.param === 'state') ? 'invalid' : '' %>"
            name="state"
            type="text"
            value="<%= oldInput.state %>"
          />
          <label for="state">State</label>
        </div>
        <div class="input-field col m4">
          <input
            class="<%= errorMessage.find(error => error.param === 'country') ? 'invalid' : '' %>"
            name="country"
            type="text"
            value="<%= oldInput.country %>"
          />
          <label for="country">Country</label>
        </div>
        <div class="input-field col m2">
          <input
            class="<%= errorMessage.find(error => error.param === 'zip') ? 'invalid' : '' %>"
            name="zip"
            type="text"
            value="<%= oldInput.zip %>"
          />
          <label for="zip">Zip</label>
        </div>
      </div>
      <div class="row">
        <div class="col m10">
          <% if(errorMessage) { %> <% errorMessage.forEach(error => { %>
          <p class="form-validation-message"><%= error.msg %></p>
          <% }) %> <% } %>
        </div>
        <div class="col m2">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="waves-effect waves-light btn right" type="submit">
            Save
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
