<%- include('partials/header') %> <%- include('partials/navbar') %>

<div class="container">
  <h4>Add Contact</h4>
  <div class="row">
    <form class="col m12" action="/contacts/create" method="post">
      <div class="row"><label style="font-size: 14pt;">Name:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input type="text" name="firstName" />
          <label for="firstName">First Name</label>
        </div>
        <div class="input-field col m6">
          <input name="lastName" type="text" />
          <label for="lastName">Last Name</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Email Address:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="email" type="email" /> <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Phone Number:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="mobile" type="text" /> <label for="mobile">Mobile</label>
        </div>
        <div class="input-field col m6">
          <input name="home" type="text" /> <label for="home">Home</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="work" type="text" /> <label for="work">Work</label>
        </div>
      </div>
      <div class="row"><label style="font-size: 14pt;">Address:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input name="street" type="text" /> <label for="street">street</label>
        </div>
        <div class="input-field col m6">
          <input name="city" type="text" /> <label for="city">City</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="state" type="text" % /> <label for="state">State</label>
        </div>
        <div class="input-field col m4">
          <input name="country" type="text" />
          <label for="country">Country</label>
        </div>
        <div class="input-field col m2">
          <input name="zip" type="text" /> <label for="zip">Zip</label>
        </div>
      </div>
      <div class="row">
        <button class="waves-effect waves-light btn right" type="submit">
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
