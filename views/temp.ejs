<div class="container">
  <h3 style="margin-bottom: 30px;">Update form</h3>
  <form
    method="POST"
    action="/contacts/<%= contact._id %>/update?_method=PATCH"
  >
    <div class="card">
      <div class="card-content">
        <table>
          <tr>
            <th>First Name:</th>
            <td>
              <input type="text" name="firstName" value=<%= contact.firstName
              %>>
            </td>
            <td></td>
            <th>Last Name:</th>
            <td>
              <input type="text" name="lastName" value=<%= contact.lastName %>>
            </td>
          </tr>
          <tr>
            <th>Email:</th>
            <td>
              <input type="email" name="email" value=<%= contact.email %>>
            </td>
          </tr>
          <tr>
            <th>Mobile Number:</th>
            <td>
              <input type="text" name="mobile" value=<%=
              contact.phoneNumber.mobile %>>
            </td>
          </tr>
          <tr>
            <th>Home Number:</th>
            <td>
              <input type="text" name="home" value=<%= contact.phoneNumber.home
              %>>
            </td>
          </tr>
          <tr>
            <th>Work Number:</th>
            <td>
              <input type="tel" name="work" value=<%=contact.phoneNumber.work
              %>>
            </td>
          </tr>
          <tr>
            <th>Street:</th>
            <td>
              <input type="text" name="street" value=<%= contact.address.street
              %>>
            </td>
          </tr>
          <tr>
            <th>City:</th>
            <td>
              <input type="text" name="city" value=<%= contact.address.city %>>
            </td>
            <td></td>
            <th>State:</th>
            <td>
              <input type="text" name="state" value=<%= contact.address.state
              %>>
            </td>
          </tr>
          <tr>
            <th>Country:</th>
            <td>
              <input type="text" name="country" value=<%=
              contact.address.country %>>
            </td>
            <td></td>
            <th>ZIP:</th>
            <td>
              <input type="text" name="zip" value=<%= contact.address.zip %>>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="card-action">
      <button
        class="btn waves-effect waves-light right"
        type="submit"
        style="margin-bottom: 50px; margin-top: 10px;"
      >
        Save
      </button>
    </div>
  </form>
  <br />
</div>

