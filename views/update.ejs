<%- include('partials/header') %>

<div class="container">
  <h4>Update Form</h4>
  <div class="row">
    <form
      class="col m12"
      action="/contacts/<%= contact._id %>/update?_method=PATCH"
      method="post"
    >
      <div class="row"><label style="font-size: 14pt;">Name:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input type="text" name="firstName" value=<%=contact.firstName%>>
          <label for="firstName">First Name</label>
        </div>
        <div class="input-field col m6">
          <input name="lastName" type="text" value=<%=contact.lastName%>>
          <label for="lastName">Last Name</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Email Address:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="email" type="email" value=<%=contact.email%>>
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <label style="font-size: 14pt;">Phone Number:</label>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="mobile" type="text"
          value=<%=contact.phoneNumber.mobile%>>
          <label for="mobile">Mobile</label>
        </div>
        <div class="input-field col m6">
          <input name="home" type="text" value=<%=contact.phoneNumber.home%>>
          <label for="home">Home</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input name="work" type="text" value=<%=contact.phoneNumber.work%>>
          <label for="work">Work</label>
        </div>
      </div>
      <div class="row"><label style="font-size: 14pt;">Address:</label></div>
      <div class="row">
        <div class="input-field col m6">
          <input name="street" type="text" value=<%=contact.address.street%> >
          <label for="street">street</label>
        </div>
        <div class="input-field col m6">
          <input name="city" type="text" value=<%=contact.address.city%> >
          <label for="city">City</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m5">
          <input name="state" type="text" value=<%=contact.address.state%>>
          <label for="state">State</label>
        </div>
        <div class="input-field col m5">
          <input name="country" type="text" value=<%=contact.address.country%>>
          <label for="country">Country</label>
        </div>
        <div class="input-field col m2">
          <input name="zip" type="text" value=<%=contact.address.zip%>>
          <label for="zip">Zip</label>
        </div>
      </div>
      <div class="row">
        <button class="waves-effect waves-light btn right" type="submit">
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
